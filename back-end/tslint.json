{
  "extends": "tslint:recommended",
  "rules": {
    "max-classes-per-file": false,
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "interface-name": [true, "always-prefix"],
    "variable-name": [true, "allow-snake-case"]
  },
  "linterOptions": {
    "exclude": [
      "dist/**/*.js",
      "node_modules/**/*.ts",
      "test/*"
    ]
  }
}

{
  "env": {
    "browser": true,
    "jest/globals": true
  },
  "extends": "airbnb",
  "parser": "typescript-eslint-parser",
  "plugins": ["typescript", "jest"],
  "rules": {
    "no-console": 1,
    "strict": 0,
    "react/jsx-filename-extension": 0,
    "import/prefer-default-export": 0
  },
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "parser": "typescript-eslint-parser",
      "rules": {
        "no-undef": "warn",
        "react/prop-types": "off",
        "no-unused-vars": "warn",
        "import/no-duplicates": "warn"
      }
    }
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    }
  }
}